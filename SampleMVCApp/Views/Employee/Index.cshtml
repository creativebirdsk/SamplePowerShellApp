@model IEnumerable<SampleMVCApp.Models.Employee>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("Add", "Create", new { }, new { @class="btn btn-success"})
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salary)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salary)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.employeeid }, new { @class = "btn btn-info" })
                @Html.ActionLink("Edit", "Edit", new { id = item.employeeid }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.employeeid }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>